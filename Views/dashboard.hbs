<h5>Dashboard</h5>
<h3>Welcome <b>{{name}}</b></h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td><a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                    </a>
                    <form action="/stories/{{_id}}" method="POST" id="delete-form" style="float: left";>
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn red btn-float">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h2>You've Not created any stories</h2>
{{/if}}